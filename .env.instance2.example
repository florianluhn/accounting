# Example configuration for Instance 2 (e.g., "Business" or "Company B")
# Copy this to .env and customize

# ==============================================
# INSTANCE CONFIGURATION
# ==============================================
APP_NAME=Business Accounting
APP_SHORT_NAME=Business
APP_DESCRIPTION=Business financial management

# ==============================================
# BACKEND SERVER CONFIGURATION
# ==============================================
BACKEND_PORT=3002
BACKEND_HOST=0.0.0.0

# ==============================================
# FRONTEND SERVER CONFIGURATION
# ==============================================
FRONTEND_PORT=5175
FRONTEND_HOST=0.0.0.0

# API URL (leave empty for auto-detect)
API_URL=

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DATABASE_PATH=./data/business/accounting.db

# ==============================================
# FILE STORAGE CONFIGURATION
# ==============================================
ATTACHMENTS_PATH=./data/business/attachments
MAX_FILE_SIZE_MB=10
MAX_STORAGE_GB=40

# ==============================================
# PM2 CONFIGURATION
# ==============================================
PM2_BACKEND_NAME=business-accounting-backend
PM2_FRONTEND_NAME=business-accounting-frontend
LOG_DIR=./logs/business

# ==============================================
# ENVIRONMENT
# ==============================================
NODE_ENV=production
