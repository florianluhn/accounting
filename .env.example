# ==============================================
# INSTANCE CONFIGURATION
# ==============================================
# Change these values for each instance running on the same device
# Example: For "Company A", use APP_NAME="Company A Accounting"

# Application Name (displayed in UI and browser title)
APP_NAME=Accounting App
APP_SHORT_NAME=Accounting
APP_DESCRIPTION=Personal finance accounting with double-entry bookkeeping

# ==============================================
# BACKEND SERVER CONFIGURATION
# ==============================================
# Backend API server settings
BACKEND_PORT=3000
BACKEND_HOST=0.0.0.0

# ==============================================
# FRONTEND SERVER CONFIGURATION
# ==============================================
# Frontend web server settings
FRONTEND_PORT=5173
FRONTEND_HOST=0.0.0.0

# API URL (optional - if not set, will auto-detect based on frontend port)
# For production deployments, set this to your backend URL
# Example: API_URL=http://192.168.1.100:3000
API_URL=

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# Path to SQLite database file
DATABASE_PATH=./data/accounting.db

# ==============================================
# FILE STORAGE CONFIGURATION
# ==============================================
# Path to store uploaded attachments
ATTACHMENTS_PATH=./data/attachments

# Maximum file size for uploads (in MB)
MAX_FILE_SIZE_MB=10

# Maximum total storage (in GB)
MAX_STORAGE_GB=40

# ==============================================
# PM2 CONFIGURATION
# ==============================================
# PM2 process names (must be unique per instance)
PM2_BACKEND_NAME=accounting-backend
PM2_FRONTEND_NAME=accounting-frontend

# Log file paths
LOG_DIR=./logs

# ==============================================
# ENVIRONMENT
# ==============================================
NODE_ENV=development
