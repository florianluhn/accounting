# Example configuration for Instance 1 (e.g., "Personal" or "Company A")
# Copy this to .env and customize

# ==============================================
# INSTANCE CONFIGURATION
# ==============================================
APP_NAME=Personal Accounting
APP_SHORT_NAME=Personal
APP_DESCRIPTION=Personal finance and expense tracking

# ==============================================
# BACKEND SERVER CONFIGURATION
# ==============================================
BACKEND_PORT=3001
BACKEND_HOST=0.0.0.0

# ==============================================
# FRONTEND SERVER CONFIGURATION
# ==============================================
FRONTEND_PORT=5174
FRONTEND_HOST=0.0.0.0

# API URL (leave empty for auto-detect)
API_URL=

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DATABASE_PATH=./data/personal/accounting.db

# ==============================================
# FILE STORAGE CONFIGURATION
# ==============================================
ATTACHMENTS_PATH=./data/personal/attachments
MAX_FILE_SIZE_MB=10
MAX_STORAGE_GB=40

# ==============================================
# PM2 CONFIGURATION
# ==============================================
PM2_BACKEND_NAME=personal-accounting-backend
PM2_FRONTEND_NAME=personal-accounting-frontend
LOG_DIR=./logs/personal

# ==============================================
# ENVIRONMENT
# ==============================================
NODE_ENV=production
